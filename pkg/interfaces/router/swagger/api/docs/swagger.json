                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "API"
                ],
                "summary": "アクセストークンの取消",
                "parameters": [
                    {
                        "description": "revoke token",
                        "name": "request_body",
