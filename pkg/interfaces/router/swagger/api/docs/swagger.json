                "summary": "登録されているOAuthアプリケーションの一覧",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/response.Errors"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/response.Errors"
                        }
                    }
                }
            }
        },
        "/oauth2/revoke": {
            "post": {
                "security": [
                    {
                        "OAuth2Application": []
